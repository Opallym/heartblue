{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
<div class="hb-register">
  <div class="card">
    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {# Nom complet #}
        {{ form_row(registrationForm.name, { label: 'Nom complet' }) }}

        {# Âge et Ville côte à côte #}
        <div class="form-row-two">
            {{ form_row(registrationForm.age, { label: 'Âge' }) }}
            {{ form_row(registrationForm.city, { label: 'Ville' }) }}
        </div>

        {# Pays #}
        {{ form_row(registrationForm.country, { label: 'Pays' }) }}

        {# Email #}
        {{ form_row(registrationForm.email, { label: 'Email' }) }}

        {# Mot de passe #}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}

        {# Case à cocher #}
        {{ form_row(registrationForm.agreeTerms, { label: 'J’accepte les conditions' }) }}

        <button type="submit" class="btn">S'inscrire</button>

    {{ form_end(registrationForm) }}

    <p class="muted">Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
  </div>
</div>
{% endblock %}
