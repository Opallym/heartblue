{% extends 'base.html.twig' %}

{% block title %}Nouvelle activité{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/activity.css') }}?v={{ 'now'|date('YmdHis') }}">
{% endblock %}

{% block body %}
<div class="activity-page">

    <div class="hero-section">
        <h1>Créer une nouvelle activité</h1>
        <p>Transformez vos idées en moments inoubliables !</p>
        <div class="hero-animation"></div>
    </div>

    <div class="container">
        <div class="activity-form-wrapper">
            {# IMPORTANT: le partial rend form_start/form_end #}
            {{ include('activity/_form.html.twig', { button_label: 'Créer l’activité' }) }}
        </div>

        <a href="{{ path('app_activity_index') }}" class="back-link">← Retour à la liste</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
  const fields = document.querySelectorAll(
    '.activity-form input:not([type="hidden"]):not([type="file"]), .activity-form textarea, .activity-form select'
  );
  fields.forEach((el) => {
    const parent = el.closest('.form-group') || el.parentElement;
    if (!parent) return;
    parent.classList.add('form-group');
    const icon = document.createElement('i');
    icon.className = 'fa fa-pencil-alt';
    parent.appendChild(icon);
  });
});
</script>
{% endblock %}
