{% extends 'base.html.twig' %}

{% block title %}Activity
{% endblock %}

{% block body %}
	<h1>Activity</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ activity.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ activity.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ activity.description }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ activity.date ? activity.date|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ activity.location }}</td>
			</tr>
			<tr>
				<th>Category</th>
				<td>{{ activity.category }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_activity_index') }}">back to list</a>

	{% if app.user and (app.user == activity.createdBy or 'ROLE_ADMIN' in app.user.roles) %}
		<a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>

		{{ include('activity/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
